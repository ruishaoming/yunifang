<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/shop_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:background="#60f0">

                <android.support.v4.view.ViewPager
                    android:id="@+id/goods_vp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></android.support.v4.view.ViewPager>

                <LinearLayout
                    android:layout_width="100px"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/goods_vp"
                    android:layout_centerHorizontal="true">

                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150px">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="10px">

                    <TextView
                        android:id="@+id/goods_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lines="2"
                        android:text="数据库尽vdzklvlk的vzmlk"
                        android:textColor="@color/colorTextBlack"
                        android:textSize="@dimen/title" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/goods_price"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="5px"
                            android:gravity="center_vertical"
                            android:text="￥99.90"
                            android:textColor="@color/colorTextMain"
                            android:textSize="@dimen/goods_price" />

                        <TextView
                            android:id="@+id/goods_oldprice"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="5px"
                            android:gravity="center_vertical"
                            android:text="￥297.00"
                            android:textColor="@color/colorGray"
                            android:textSize="@dimen/common_text" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="15px"
                            android:src="@mipmap/coupons" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="15px"
                            android:src="@mipmap/pledge" />

                    </LinearLayout>
                </LinearLayout>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:button="@null"
                    android:drawableTop="@drawable/shop_collect"
                    android:gravity="center_vertical"
                    android:padding="25px"
                    android:text="收藏"
                    android:textColor="@color/colorTextBlack" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40px"
                android:paddingLeft="30px"
                android:paddingRight="30px">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="right|center_vertical"
                        android:text="运费 "
                        android:textColor="@color/colortvGray"
                        android:textSize="@dimen/common_text" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:text="包邮"
                        android:textColor="@color/colorTextMain"
                        android:textSize="@dimen/common_text" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right|center_vertical"
                        android:text="销量 "
                        android:textColor="@color/colortvGray"
                        android:textSize="@dimen/common_text" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="9.51万"
                        android:textColor="@color/colorTextMain"
                        android:textSize="@dimen/common_text" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right|center_vertical"
                        android:text="收藏 "
                        android:textColor="@color/colortvGray"
                        android:textSize="@dimen/common_text" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="11043"
                        android:textColor="@color/colorTextMain"
                        android:textSize="@dimen/common_text" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="20px"
                android:background="@color/colortvGray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:layout_marginTop="30px"
                android:drawableRight="@mipmap/ico_big_right"
                android:gravity="center_vertical"
                android:paddingLeft="30px"
                android:paddingRight="30px"
                android:text="双十二狂欢趴：扫货攻略" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:layout_marginTop="35px"
                android:drawableRight="@mipmap/ico_big_right"
                android:gravity="center_vertical"
                android:paddingLeft="30px"
                android:paddingRight="30px"
                android:text="邀请有礼·270元面膜免费领" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:layout_marginTop="35px"
                android:drawableRight="@mipmap/ico_big_right"
                android:gravity="center_vertical"
                android:paddingLeft="30px"
                android:paddingRight="30px"
                android:text="购物须知·客服时间8:30-23:30" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:drawableLeft="@mipmap/public_contact_service_icon"
            android:gravity="center_vertical"
            android:textSize="@dimen/shop_title"
            android:paddingLeft="20px"
            android:text=" 客服" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#8ff0"
            android:gravity="center"
            android:text="加入购物车"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/shop_title" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#8f00"
            android:gravity="center"
            android:text="立即购买"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/shop_title" />

    </LinearLayout>
</LinearLayout>
