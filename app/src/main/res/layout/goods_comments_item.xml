<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/goods_comment_icon"
        android:layout_width="130px"
        android:layout_height="130px"
        android:padding="10px"
        android:src="@mipmap/user_icon_no_set" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="5px">

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/goods_comment_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name"
                android:textColor="@color/colorTextMain"
                android:textSize="@dimen/common_text" />

            <TextView
                android:id="@+id/goods_comment_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="2016/12/07"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/common_text" />
        </com.zhy.autolayout.AutoRelativeLayout>

        <TextView
            android:id="@+id/goods_comment_contnet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="内容"
            android:textColor="@color/colortvGray"
            android:textSize="@dimen/common_text" />

        <com.rui.yunifang.view.InnerGridView
            android:id="@+id/goods_comment_item_gv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="4"></com.rui.yunifang.view.InnerGridView>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>