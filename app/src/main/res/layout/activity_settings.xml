<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_layout" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/settings_tv_notice"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/click_bg"
            android:drawableRight="@mipmap/mine_vip_arrows_right"
            android:gravity="center_vertical"
            android:padding="20px"
            android:text="购物须知"
            android:textColor="@color/colortvGray"
            android:textSize="@dimen/common_text" />

        <TextView
            android:id="@+id/settings_tv_idea"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/click_bg"
            android:drawableRight="@mipmap/mine_vip_arrows_right"
            android:gravity="center_vertical"
            android:padding="20px"
            android:text="意见反馈"
            android:textColor="@color/colortvGray"
            android:textSize="@dimen/common_text" />

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/settings_tv_clearCache"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/click_bg">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:padding="20px"
                android:text="清除缓存"
                android:textColor="@color/colortvGray"
                android:textSize="@dimen/common_text" />

            <TextView
                android:id="@+id/settings_tv_cacheSize"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:padding="20px"
                android:text="已缓存0.0M"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/common_text" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/click_bg"
            android:drawableRight="@mipmap/mine_vip_arrows_right">

            <TextView
                android:id="@+id/settings_tv_about_us"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableRight="@mipmap/mine_vip_arrows_right"
                android:gravity="center_vertical"
                android:padding="20px"
                android:text="关于我们"
                android:textColor="@color/colortvGray"
                android:textSize="@dimen/common_text" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignRight="@+id/settings_tv_about_us"
                android:layout_marginRight="50px"
                android:src="@mipmap/about_us_code" />
        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/settings_line_call"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/click_bg">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:padding="20px"
                android:text="拨打电话"
                android:textColor="@color/colortvGray"
                android:textSize="@dimen/common_text" />

            <TextView
                android:id="@+id/settings_tv_number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:padding="20px"
                android:text="400-688-0900"
                android:textColor="@color/colorTextMain"
                android:textSize="@dimen/common_text" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/settings_line_update"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/click_bg">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:padding="20px"
                android:text="检查更新"
                android:textColor="@color/colortvGray"
                android:textSize="@dimen/common_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:padding="20px"
                android:text="已是最新版本"
                android:textColor="@color/colortvGray"
                android:textSize="@dimen/common_text" />
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>


    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <Button
            android:layout_width="500px"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/colorTextMain"
            android:text="退出登录"
            android:textColor="@color/colorWhite" />
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoLinearLayout>
