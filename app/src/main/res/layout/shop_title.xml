<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100px"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/shop_title_back"
        android:layout_width="40px"
        android:layout_height="40px"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/back_normal" />

    <TextView
        android:id="@+id/shop_title_tv"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="商品详情" />

    <ImageView
        android:id="@+id/shop_title_car"
        android:layout_width="40px"
        android:layout_height="40px"
        android:layout_gravity="center_vertical"
        android:layout_margin="10px"
        android:src="@mipmap/goods_shopping_cart" />

    <ImageView
        android:id="@+id/shop_title_share"
        android:layout_width="40px"
        android:layout_height="40px"
        android:layout_gravity="center_vertical"
        android:layout_margin="10px"
        android:src="@mipmap/share_normal" />
</LinearLayout>