<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10px"
     android:orientation="vertical">

    <TextView
        android:id="@+id/order_fragment_lv_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:textColor="@color/colorTextMain"
        android:textSize="@dimen/shop_title" />

    <com.rui.yunifang.view.InnerGridView
        android:id="@+id/order_fragment_item_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="1"
        android:verticalSpacing="20px">

    </com.rui.yunifang.view.InnerGridView>

    <TextView
        android:id="@+id/order_fragment_sumPrice_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="@dimen/common_text"
        android:text="e342432"
        android:textColor="@color/colorTextBlack" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="200px"
            android:scrollbars="none"
            android:layout_height="70px"
            android:background="@color/colorGray"
            app:cardCornerRadius="10px">

            <TextView
                android:id="@+id/order_fragment_cancle_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorWhite"
                android:gravity="center"
                android:textColor="@color/colorGray"
                android:text="取消订单"
                android:textSize="@dimen/common_text" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="200px"
            android:layout_height="70px"
            app:cardBackgroundColor="@color/colorClickBg"
            app:cardCornerRadius="10px">

            <TextView
                android:id="@+id/order_fragment_pay_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:text="订单付款"
                android:textSize="@dimen/common_text" />
        </android.support.v7.widget.CardView>


    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>