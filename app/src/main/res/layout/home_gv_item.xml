<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0.5px"
    android:background="@drawable/share_square"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="0.5px">

    <ImageView
        android:id="@+id/home_gv_item_iv"
        android:layout_width="wrap_content"
        android:layout_height="300px"
        android:src="@drawable/default_1" />

    <TextView
        android:id="@+id/home_gv_item_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5px"
        android:lines="1"
        android:textColor="@color/colorTextBlack"
        android:textSize="@dimen/shop_title" />

    <TextView
        android:id="@+id/home_gv_item_tv_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5px"
        android:lines="2"
        android:paddingRight="25px"
        android:textColor="@color/colorGray"
        android:textSize="@dimen/shop_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5px">

        <TextView
            android:id="@+id/home_gv_item_tv_price"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@color/colorTextMain"
            android:textSize="@dimen/shop_price" />

        <TextView
            android:id="@+id/home_gv_item_tv_oldPrice"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/common_text" />
    </LinearLayout>
</LinearLayout>