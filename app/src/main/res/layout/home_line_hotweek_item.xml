<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_line_hotweek_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/share_square"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="5px">

    <ImageView
        android:id="@+id/home_line_hot_week_iv"
        android:layout_width="200px"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:padding="1px"
        android:src="@drawable/default_1" />

    <TextView
        android:id="@+id/home_line_hot_week_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:lines="2"
        android:textColor="@color/colorTextBlack"
        android:textSize="@dimen/shop_title" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/home_line_hot_week_tv_price"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/colorTextMain"
            android:textSize="@dimen/shop_price" />

        <TextView
            android:id="@+id/home_line_hot_week_tv_oldPrice"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/common_text" />
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>
