<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="500px"
    android:orientation="vertical">


    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/goods_pop_bottom"
        android:layout_width="match_parent"
        android:layout_height="500px"
        android:layout_marginTop="25px"
        android:background="#fff"
        android:orientation="vertical"
        android:paddingLeft="20px">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/goods_pop_icon"
                android:layout_width="200px"
                android:layout_height="match_parent"
                android:padding="10px"
                android:src="@drawable/default_1" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="10px">

                <TextView
                    android:id="@+id/goods_pop_price_tv"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="135153"
                    android:textColor="@color/colorTextMain"
                    android:textSize="@dimen/common_text" />

                <TextView
                    android:id="@+id/goods_pop_savenum_tv"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="135153"
                    android:textColor="@color/colortvGray"
                    android:textSize="@dimen/common_text" />

                <TextView
                    android:id="@+id/goods_pop_limit_tv"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="135153"
                    android:textColor="@color/colortvGray"
                    android:textSize="@dimen/common_text" />
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>

        <include layout="@layout/buy_num_layout" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/goods_pop_btn"
                android:layout_width="250px"
                android:layout_height="80px"
                android:background="@color/colorTextMain"
                android:text="确定"
                android:textColor="@color/colorWhite" />
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>

    <ImageView
        android:id="@+id/goods_pop_close"
        android:layout_width="70px"
        android:layout_height="70px"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30px"
        android:background="@drawable/pop_close_iv"
        android:padding="7px"
        android:src="@mipmap/dialog_close" />

</com.zhy.autolayout.AutoRelativeLayout>